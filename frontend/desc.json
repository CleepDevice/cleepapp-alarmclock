{
    "icon": "alarm",
    "global": {
        "js": ["alarmclock.service.js", "alarmclock.filter.js"],
        "html": [],
        "css": []
    },
    "config": {
        "js": ["alarmclock.config.js"],
        "html": ["alarmclock.config.html"],
        "css": []
    },
    "widgets": {
        "alarmclock": {
            "content": "<span class=\"md-display-1\">{{ device.time.hour | padzero }}:{{ device.time.minute | padzero }}</span>",
            "footer": [
                {
                    "icon": "briefcase",
                    "tooltip": "Enabled on non-working-days",
                    "condition": {
                        "variable": "device.nonWorkingDays",
                        "operator": "===",
                        "value": true
                    }
                },
                {
                    "icon": "briefcase-off",
                    "tooltip": "Disabled on non-working-days",
                    "condition": {
                        "variable": "device.nonWorkingDays",
                        "operator": "===",
                        "value": false
                    }
                },
                {
                    "icon": "calendar-clock",
                    "attr": "days",
                    "filter": "alarmclockDays"
                },
                {
                    "type": "button",
                    "icon": "alarm",
                    "tooltip": "Enabled",
                    "action": {
                        "command": "toggle_alarm",
                        "to": "alarmclock",
                        "uuid": "alarm_uuid"
                    },
                    "condition": {
                        "variable": "device.enabled",
                        "operator": "===",
                        "value": true
                    }
                },
                {
                    "type": "button",
                    "icon": "alarm-off",
                    "tooltip": "Disabled",
                    "style": "md-accent",
                    "action": {
                        "command": "toggle_alarm",
                        "to": "alarmclock",
                        "uuid": "alarm_uuid"
                    },
                    "condition": {
                        "variable": "device.enabled",
                        "operator": "===",
                        "value": false
                    }
                }
            ]
        }
    }
}

